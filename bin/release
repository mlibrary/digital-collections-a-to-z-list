#!/usr/bin/env bash

BINDIR=`dirname $0`
REPODIR=`realpath $BINDIR/..`
WEBDIR=`realpath $BINDIR/../..`

OPT=$1
if [ "$OPT" != "--nobuild" ]
then
  cd $REPODIR
  ./bin/build
fi

cd $WEBDIR

rsync -av --exclude=.git --exclude=.cache --exclude=node_modules --exclude=src --exclude=var/* .  /quod/web/a-z